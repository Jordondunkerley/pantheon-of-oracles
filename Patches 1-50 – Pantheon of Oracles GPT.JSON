{
  "patch_name": "Intro Patch 1.0 \u2013 The First Flame Awakens",
  "version": "1.0",
  "author": "Jordon Dunkerley",
  "date_created": "2025-04-07",
  "description": "Establishes the full narrative and structural onboarding sequence for all new players entering the Pantheon of Oracles. Integrates ruling Oracle logic, faction alignment, first ritual, and seasonal initiation.",
  "content": {
    "invocation_sequence": {
      "welcome_message": "Welcome, Seeker of Cosmic Wisdom. You\u2019ve arrived at the threshold of the divine. The stars remember your birth, and the cosmos awaits your awakening.",
      "prompt": "Upload your birth chart to initiate your journey. Your ruling planet, cosmic alignments, and hidden truths will be revealed\u2014but not all at once."
    },
    "oracle_alignment_choice": {
      "method_options": [
        {
          "method": "Traditional",
          "logic": "Defaults to the modern ruler of the Rising Sign (e.g. Pisces \u2192 Neptune). If chart shows stronger pull toward traditional ruler (e.g. Jupiter), the system overrides to it.",
          "presentation": "This path follows the Rising Sign that rose at your birth, and the planetary ruler who still guards that path."
        },
        {
          "method": "Modern",
          "logic": "Calculates the planet with dominant gravitational pull via motion, decan, element spread, and aspects.",
          "presentation": "This method follows the planetary force that exerts the greatest influence across your chart. It is your dominant energy."
        },
        {
          "method": "Solar",
          "logic": "Pulls directly from the Sun Sign and its decan. Treated with slightly less energetic weight behind the scenes.",
          "presentation": "This path calls upon your core identity. Your solar fire shines steady, even if quiet."
        }
