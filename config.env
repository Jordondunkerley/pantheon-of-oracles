##############################################
# Pantheon of Oracles Discord Bot Settings
#
# Copy this file to `.env` or set these variables in your hosting
# environment.  The Discord bot (bot.py) reads these values at
# startup to connect to Discord and to your Pantheon API.
#
# The token for your Discord application.  Replace the placeholder
# below with the real bot token provided by Discord.  Never commit
# your real token to source control.
DISCORD_TOKEN=PASTE_DISCORD_BOT_TOKEN_HERE

# Base URL for the Pantheon API.  When running the API locally via
# `python main.py`, this should be `http://localhost:8000`.  When
# deployed, set it to your publicly accessible API URL (e.g.
# `https://pantheon-of-oracles.onrender.com`).
API_BASE=http://localhost:8000

# Credentials for authenticating with the Pantheon API.  These
# correspond to the `/token` endpoint implemented in main.py.  The
# username must exist in accounts.json and the password must match
# the value of `API_PASSWORD` in the API process environment.
API_USERNAME=jordon
API_PASSWORD=changeme
